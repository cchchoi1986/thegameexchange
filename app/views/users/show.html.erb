<%= render "users/searchbar" %>

<div class="jumbo row">
  <%= image_tag @user.avatar.url, size: "100x100" %>
  
  <h2><%= @user.username %></h2>
  <% if @user.id != current_user.id %>
    <%= button_to "Offer", "/offers/#{@user.id}", method: :get, class: "gamenavbuttons btn" %>
  <% end %>
  <table id="offerlog" class="table table-condensed">
    <thead>
      <tr class="row-fluid">
        <th class='col-xs-1'>OfferID</th>
        <th class='col-xs-2'>Counterparty</th>
        <th class='col-xs-2'>I Offer</th>
        <th class='col-xs-2'>They Offer</th>
        <th class='col-xs-1'>Status</th>
        <th class='col-xs-1'></th>
        <th class='col-xs-1'></th>
      </tr>
    </thead>
    <tbody id="offers-body">
      <%= render "users/offerlog", :offerlistname => @ioffers, :cssrow => 'offerrow' %>
      <%= render "users/offerlog", :offerlistname => @youoffers, :cssrow => 'offerrow' %>
      <%= render "users/offerlog", :offerlistname => @iacceptedoffers, :cssrow => 'wantrow' %>
      <%= render "users/offerlog", :offerlistname => @youacceptedoffers, :cssrow => 'wantrow' %>
      <%= render "users/offerlog", :offerlistname => @ideclinedoffers, :cssrow => 'giverow' %>
      <%= render "users/offerlog", :offerlistname => @youdeclinedoffers, :cssrow => 'giverow' %>
    </tbody>
  </table>
  
  <!-- <h5><%= @user.email %></h5> -->
  <%= render "users/commentsection" %>
</div>

<div class="row">

  <%= render "users/userlist", :usergames => @wanted_game, :rowcss => "wantrow", :emptymessage => "Currently user wants no games", :tableid => "wanted", :thelisttitle => 'WaNTED' %>
  <%= render "users/userlist", :usergames => @given_game, :rowcss => "giverow", :emptymessage => "Currently user has no games to give", :tableid => "given", :thelisttitle => 'GiVEN' %>

</div>

<%= render "users/searchbar" %>
